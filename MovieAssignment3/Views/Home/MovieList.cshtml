@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Header = "The Joel Hilton Film Collection";
}

@model IEnumerable<MovieAssignment3.Models.Movie>


<div>
    <h2>Movies</h2>

    <table class="table table-bordered align-content-center">
        <thead class="thead-light">
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                        <td>
                            <form method="get" asp-action="EditMovie">
                                <input type="hidden" name="MovieId" id="MovieId" value="@x.MovieId"/>
                                <button class="btn-sm" type="submit">Edit Movie Info</button>
                            </form>
                            <form method="post" asp-action="DeleteMovie">
                                <input type="hidden" name="MovieId" id="MovieId" value="@x.MovieId" />
                                <button class="btn-sm" type="submit">Delete Movie</button>
                            </form>
                        </td>
                    </tr>
                 }
             }
        </tbody>
    </table>
</div>

