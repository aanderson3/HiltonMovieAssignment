@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Header = "The Joel Hilton Film Collection";
}

@model MovieAssignment3.Models.Movie

<h1>Enter the information of the new movie:</h1>

<div>
    <form asp-action="AddMovie" method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value=""></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited"></label>
        <select asp-for="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />
        <br />
        <button type="submit">Submit</button>
        <br />
        <div asp-validation-summary="All"></div>
    </form>
</div>
